<div class="search-bar">
  <div class="row">
    <%= simple_form_for :search, method: :get, url: machines_path, wrapper: :inline_form,
      html: { class: "form-inline" }  do |f| %>
      <%= f.input :location, placeholder:
          if params[:search]
            raise
            params[:search][:location]
          else
            'location'
          end
          %>



      <%= f.input :date, as: :date, html5: true, label: false, placeholder: 'date' %>
      <%= f.input :time, placeholder: 'time' %>
      <%= f.input :business_type, collection: ["Cafe","Bar", "Gym", "Shopping Mall", "Coworking Space", "University & Libraries", "Other"]
          # if params[:search][:business_type]
          #   placeholder: params[:search][:business_type]
          # else
          #   collection: ["Cafe","Bar", "Gym", "Shopping Mall", "Coworking Space", "University & Libraries", "Other"]
          # end
          %>
      <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
