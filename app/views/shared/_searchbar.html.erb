<div class="search-bar">
  <div class="container">
    <%= simple_form_for :search, method: :get, url: machines_path, wrapper: :inline_form,
      html: { class: "form-inline" }  do |f| %>
      <%= f.input :location, placeholder:
          if params[:search].nil? || params[:search][:location].nil? || params[:search][:location].empty?
            'location'
          else
            params[:search][:location]
          end
          %>
      <%= f.input :date, input_html: { value: @date }, as: :date, html5: true, label: false %>
      <%= f.input :time, placeholder: 'time' %>
      <%= f.input :business_type, collection: ["Cafe","Bar", "Gym", "Shopping Mall", "Coworking Spaces", "Universities", "Other"], selected: @business_type , prompt: "What do you fancy my love?" %>
      <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
