<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to image_tag('logo.png', width: 60) + " laundry-lounge", root_path, class: "navbar-logo" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active mr-15">
          <%= link_to "events", "#", class: "nav-link" %>
        </li>
        <li class="nav-item mr-15">
          <%= link_to "laundry-blog", "#", class: "nav-link" %>
        </li>
        <li class="nav-item mr-15">
          <%= link_to "become a host", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/hawareyoudoing", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active mr-15">
          <%= link_to "events", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item mr-15">
          <%= link_to "laundry-blog", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item mr-15">
          <%= link_to "become a host", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to image_tag('user-regular.png', width: 30), new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
