<div class="container">
  <div class="row">
    <%= render 'shared/searchbar' %>
  </div>
  <div class="map-container">
    <div class="row">

      <div class="container col-4 mt-4 mx-4">
        <div class="col">
          <%= link_to "+", new_machine_path, class: "btn btn-ghost" %>
          <% @machines.each do | machine | %>
            <div class="card-product mt-5">
              <img src="https://images.unsplash.com/photo-1593326041306-9df08699defb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1266&q=80" />
              <div class="card-product-infos">
                <%= link_to machine.business_name, machine_path(machine) %>
                <p><%= machine.location %></p>
                <p><%= machine.machine_type %></p>
                <p><%= machine.price %> EUR</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col" id="map" style="width: 100%; height: 100vh;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
